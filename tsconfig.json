{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es2015",
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "types": [
    "typePatches"
  ],
  "include": ["./src/**/*", "custom.d.ts"]
}
